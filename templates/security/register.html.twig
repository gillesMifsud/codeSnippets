{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="grid-container">
        <h2>Register</h2>

        {% if error %}
            <div class="callout alert">
                {{ error.messageKey | trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="button">Register</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
