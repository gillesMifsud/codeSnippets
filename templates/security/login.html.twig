{% extends 'base.html.twig' %}

{% block title %}Connexion (admin){% endblock %}

{% block body %}
    <div class="grid-container">
        <h2>Se connecter</h2>

        {% if error %}
            <div class="callout alert">
                {{ error.messageKey | trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form action="{{ path('login') }}" method="post">
            <label>Email
                <input type="text" placeholder="somebody@example.com" name="_username"
                       id="username" value="{{ last_username }}">
            </label>
            <label>Password
                <input type="password" placeholder="Password" name="_password" id="password">
            </label>
            <p><input type="submit" class="button expanded" value="Log in"></p>
        </form>
    </div>
{% endblock %}
